<Window x:Class="WpfTestMailSender.SendCompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="SendCompleteWindow" Height="175" Width="405" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Width="400">
        <Label x:Name="ISendComplete" Content="Done!" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="36" Foreground="#FF55465F"/>
        
        
        <Button x:Name="btnOk"  Content="Ok" HorizontalAlignment="Left" Margin="147,147,0,0" VerticalAlignment="Top" Width="106" Height="20" Click="BtnOk_Click"/>

    </Grid>
</Window>
